<!DOCTYPE html>
<html lang="en">
<head>
     <!-- head -->
     <%- include('partials/head') %> 
     <style>
        section {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 0;
            height: 200vh;
        }
        #banner {
            width: 100%;
            height: 450px;
            background: linear-gradient(rgba(0, 0, 0, 0.225), #212121), url('<%= data.img %>') center/cover no-repeat;
            filter: blur(20px);
            position: absolute;
            top: 0;
            left: 0;
            z-index: -1;
        }

        #banner2 {
            position: sticky;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 200px;
            background: linear-gradient(rgba(0, 0, 0, 0), #212121);
        }

        #movieDetails {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 1em;
            padding: 0 220px;
        }
        #movieDetails img {
            border-radius: 10px;
            animation: details 1s;
        }
        #movieDetails h1 {
            text-align: center;
            animation: details 1.3s;
        }
        #movieDetails p {
            text-align: center;
            line-height: 2;
            letter-spacing: 1px;
            animation: details 1.6s;
        }

        @keyframes details {
            from {
                opacity: 0;
                transform: translateX(-100px);
            }
            to {
                opacity: 1;
                transform: translateX(0px);
            }
        }

        @media (max-width: 1100px) {
            section {
                height: auto;
                padding: 100px 0;
            }
            #movieDetails {
                padding: 0 100px;
            }
        }

        @media (max-width: 768px) {
            #movieDetails {
                padding: 0 20px;
            }
            #movieDetails p {
                letter-spacing: 0;
                font-size: 14px;
                text-align: left;
            }
        }
     </style>
</head>
<body>
    <!-- navbar -->
    <%- include('partials/navbar') %> 

    <section>
        <div id="banner"></div>
        <div id="movieDetails">
            <img src="<%= data.img %> " alt="">
            <h1><%= data.name %> </h1>
            <p><%= data.details %> </p>
        </div>
        <div id="banner2"></div>
    </section>

    <!-- js codes -->
    <%- include('partials/js') %> 
</body>
</html>